<div class="row">
    <div class="col-xs-10 text-center">
            <h1><i class="fas fa-hamburger mr-2"></i>Stock Fridge<i class="fas fa-hotdog ml-2"></i></h1>
    </div>
    <div class="col-xs-2 float-right pt-2">
        <a href="/login" class="btn btn-light">Login</a>
        <a href="/logout" class="btn btn-dark">LogOut</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 border p-2">
        <form action="/" method="post">
            <div class="form-group">
                <label for="">Icon</label>
                <select class="form-control" name="icon_food" id="icon_food">
                    <option>Fish</option>
                    <option>Meat</option>
                    <option>Pasta</option>
                </select>
                <label for="">Type Food</label>
                <input type="text" name="food" id="food" class="form-control" placeholder="" aria-describedby="helpId">
                <small id="helpId" class="text-muted">For instance: "Macaroni with tomate"</small>
                <br>
                <label for="">Cook Day</label>
                <input type="date" data-date-format="DD MMMM YYYY" name="cook_date" id="cook_date" class="form-control" placeholder="" aria-describedby="helpId">
                <small id="helpId_cookDay" class="text-muted"></small>
            </div>
            <div class="form-group">
                <label for="">Expiry Date</label>
                <input type="date" data-date-format="DD MMMM YYYY" name="expiry_date" id="expary_date" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Send</button>
            </div>
        </form>
    </div>   
    <div class="col-sm-6">
        {{#each dish}}
            <div class="card-group mb-1">
                <div class="card">
                    <div class="card-body p-1">  
                    {{#each this}}
                        {{#if this.food}}
                            <h4 class="card-title m-0">{{food}}<img src="img/{{icon_food}}.png" alt="Picture {{icon_food}}" style="width: 50px; height: 50px"></h4>
                            <p class="card-text m-1">Expiry Date:{{expiry_date}}</p>
                            <a href="/delete/{{_id}}" class="btn btn-danger float-right"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            <a href="/edit/{{_id}}" class="btn btn-warning float-right"><i class="fas fa-edit"></i></a>
                        {{/if}}                               
                    {{/each}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
