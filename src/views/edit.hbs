<div class="row">
    <div class="col-md-12 text-center">
        <h1><i class="fas fa-hamburger mr-2"></i>Stock Fridge<i class="fas fa-hotdog ml-2"></i></h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6 border p-2">
        {{#each x}}
            {{#if this.food}}            
                <form action="/edit/{{_id}}" method="post">
                    <div class="form-group">
                        <label for="">Icon</label>
                        <select class="form-control" name="icon_food" id="icon_food">
                            <option selected="true" disabled="disabled">{{icon_food}}</option>
                            <option>Fish</option>
                            <option>Meat</option>
                            <option>Pasta</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Type Food</label>
                        <input type="text" name="food" id="food" class="form-control" placeholder="{{food}}" aria-describedby="helpId" value="{{food}}">
                        <small id="helpId" class="text-muted">{{food}}</small>
                    </div>
                    <div class="form-group">
                        <label for="">Cook Day</label>
                        <input type="date" data-date-format="DD MMMM YYYY" name="cook_date" id="cook_date" class="form-control" placeholder="{{cook_date}}" aria-describedby="helpId" value="{{cook_date}}">
                        <small id="helpId_cookDay" class="text-muted">{{cook_date}}</small>
                    </div>
                    <div class="form-group">
                        <label for="">Expiry Date</label>
                        <input type="date" data-date-format="DD MMMM YYYY" name="expiry_date" id="expary_date" class="form-control" placeholder="{{expiry_date}}" value="{{expiry_date}}">
                        <small id="helpId" class="text-muted">{{expiry_date}}</small>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Send</button>
                    </div>
                </form>
            {{/if}}
        {{/each}}
        
    </div>